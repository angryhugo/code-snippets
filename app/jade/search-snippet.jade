extends layout

block title
    | #{t("search-snippet.searchFor")}&nbsp;&apos;#{keyword}&apos;

append head
    - if (nodeEnv == "production") {
        link(rel='stylesheet', href='/static/css/search-snippet.min.css')
    - }
    - else {
        link(rel="stylesheet", href="/assets/vendor/select2/css/select2.css")
        link(rel='stylesheet', href='/static/css/search-snippet.css')
    - }

block main
    include ./pager-mixin
    div.container.nav-margin
        div.page-header
            h3
                | #{t("search-snippet.title")}
                a.btn.btn-info.pull-right(href='/')
                    | #{t("search-snippet.backBtn")}
        div.filter
            select#select2-search-snippets(style="width:200px")
                option(value=0)
                    | #{t("search-snippet.all")}
                    if typeList.length>0
                        for type in typeList
                            option(value="#{type.id}",selected=( type.id == typeId ? true:false)) 
                                | #{type.typeName}
        if snippetList.length>0
            table#table-snippets.table
                thead
                    tr
                        th.col-md-3
                            | #{t("search-snippet.snippetTitle")}
                        th.col-md-2 
                            | #{t("search-snippet.type")}
                        th.col-md-2
                            | #{t("search-snippet.creater")}
                        th.col-md-3
                            | #{t("search-snippet.createTime")}
                        th.col-md-1
                for snippet in snippetList
                    tr
                        td.col-md-3
                            | #{snippet.title}
                        td.col-md-2 
                            | #{snippet.type}
                        td.col-md-2
                            | #{snippet.creator}
                        td.col-md-3
                            | #{snippet.createTime}
                        td.col-md-1
                            a#link-view-snippet.link-tooltip(href='/snippets/#{snippet.id}',data-original-title='#{t("search-snippet.viewTitle")}', data-placement='left')
                                i.fa.fa-eye.fa-lg
            mixin pager(pagination.pager, pagination.url)
        else
            h3
                | #{t("search-snippet.noSnippet")}
block scripts
    - if (nodeEnv == "production") {
        script(type='text/javascript', src='/static/js/search-snippet.min.js')
    - }
    - else {
        script(type='text/javascript', src='/assets/vendor/jquery/jquery.tablesorter.js')
        script(type='text/javascript', src='/assets/vendor/select2/js/select2.js')
        script(type='text/javascript', src='/assets/js/search-snippet.js')
    - }
